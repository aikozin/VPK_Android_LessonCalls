<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@color/textColor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/discipline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTest"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/trainingGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTest"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/discipline"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/discipline"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/startTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trainingGroup"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/discipline"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textSize="10sp" />
</RelativeLayout>